<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="158dp"
        android:orientation="horizontal"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/example1" />

        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tituloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del elemento"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descripcionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del elemento"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/direccionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion del elemento" />

            <RatingBar
                android:id="@+id/ratingbar_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/favoritoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Favorito"
            android:src="@drawable/baseline_favorite_24" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>